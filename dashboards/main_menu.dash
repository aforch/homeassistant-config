#
# Main arguments, all optional
#
title: Main Menu 
widget_dimensions: [95,95]
widget_size: [1, 1]
widget_margins: [2, 2]
columns: 8 
global_parameters:
    use_comma: 0
    precision: 1
    use_hass_icon: 1
#    namespace: default
#
# Layout
#    
layout:
    - include: navigation-definition
    - manage, clock(2x1), media_art(3x3), now_playing(2x1) 
    - lights, weather(2x2), living_room 
    - scenes

living_room:
    widget_type: input_number
    name: Goggle Home Volume
    initial: 40
    min: 0
    max: 100
    step: 1

media_art:
    widget_type: camera
    entity_picture: http://192.168.1.203:8123/api/camera_proxy/camera.generic_camera?token={{ states.media_player.living_room.attributes.access_token }}&api_password=ImNotTelling
    refresh: 10

now_playing:
    widget_type: sensor
    title: Now Playing
    title_style: "font-size: 14pt;"
    text_style: "font-size: 14pt;"
    entity: sensor.lr_playing

google_home_volume:
    widget_type: input_number
    name: Living Room Volume
    initial: 0.3
    min: 0.0
    max: 1.0
    step: 0.1
    entity: automation.googlehome_volume 

clock:
    widget_type: clock
    time_format: 24hr
    show_seconds: 0 
    time_style: "color: yellow; font-size: 40pt; font-weight: bold;"
    date_style: "font-size: 14pt; font-weight: bold;"

weather:
    widget_type: weather
    units: "&deg;C"
    sub_style: "font-size: 100%; font-weight: bold;"
    main_style: "font-size: 70%; font-weight: bold;"
    unit_style: "font-size: 100%;"

forecast:
    widget_type: sensor
    title: Prognoza
    title_style: "font-size: 14pt;"
    text_style: "font-size: 16pt; font-weight: bold;"
    precision: 0
    entity: sensor.dark_sky_forecast_ro  
